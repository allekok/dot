#!/bin/sh

# Constants
FILES_PATH=files
FILES_HOME_PATH="$FILES_PATH/home"
FILES_ETC_PATH="$FILES_PATH/etc"

# Aliases
alias cp='cp -vr' # Add `-i' for interactive

# home
cd $FILES_HOME_PATH
for F in $(ls -a)
do
    if [ $F != "." ] && [ $F != ".." ]; then
	cp $F $HOME
    fi
done	 

# etc
cd ../../$FILES_ETC_PATH
for F in $(ls -a)
do
    if [ $F != "." ] && [ $F != ".." ]; then
	sudo cp -vr $F /etc
    fi
done
