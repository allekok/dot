#!/usr/bin/sh

# Constants
FILES_PATH=files
FILES_HOME_PATH=$FILES_PATH/home
FILES_ETC_PATH=$FILES_PATH/etc

# Aliases
alias cp='cp -vf'
alias mkdir='mkdir -p'

# Change current directory
mkdir $FILES_HOME_PATH
cd $FILES_HOME_PATH

# .profile
cp ~/.profile .
# .bashrc
cp ~/.bashrc .
# .gitconfig
cp ~/.gitconfig .
# .xinitrc
cp ~/.xinitrc .

# .emacs.d
mkdir .emacs.d
mkdir .emacs.d/{themes,langs}
cp ~/.emacs.d/{init.el,config.org} .emacs.d
cp ~/.emacs.d/themes/*.el .emacs.d/themes
cp ~/.emacs.d/langs/*.el .emacs.d/langs

# .fonts
mkdir .fonts
cp ~/.fonts/*.{ttf,otf} .fonts

# .color-*
cp ~/.color-{light,dark} .

# PROG
mkdir PROG
cp -r ~/PROG/* PROG

# /etc
cd ../..
mkdir $FILES_ETC_PATH
cd $FILES_ETC_PATH
cp /etc/issue .
cp /etc/motd .
